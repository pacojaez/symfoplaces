{% extends 'layouts/base.html.twig' %}

{% block title %} Register!{% endblock %}

{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

   <div class="d-flex flex-row justify-content-center">
        <h1>Register</h1>
   </div>
    <div class="d-flex flex-row justify-content-center">
        <div class="w-half mw-full">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email, {
                    'label_attr': {'class': 'text-center font-weight-bold'}
                }) }}
                {{ form_row(registrationForm.name, {
                    'label_attr': {'class': 'text-center font-weight-bold'}
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password',
                    'label_attr': {'class': 'text-center font-weight-bold'}
                }) }}
                {{ form_row(registrationForm.country, {
                    'label_attr': {'class': 'text-center font-weight-bold'}
                }) }}
                {{ form_row(registrationForm.city, {
                    'label_attr': {'class': 'text-center font-weight-bold'}
                }) }}
                {{ form_row(registrationForm.avatar, {
                    'label_attr': {'class': 'text-center font-weight-bold'}
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'Debes aceptar los t√©rminos',
                    'label_attr': {'class': 'text-center font-weight-bold'}
                }) }}
                {# {{ form_row(registrationForm.registrar, {
                    'label_attr': {'class': 'text-center font-weight-bold'}
                }) }} #}
            {{ form_rest(registrationForm) }}
            
            <button type="submit" class="btn btn-primary m-4">Registro</button>
        {{ form_end(registrationForm) }}
        </div>
    </div>
    
{% endblock %}
