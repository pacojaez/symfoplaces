<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta tags -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta name="viewport" content="width=device-width" />

    <meta name="description" content="{% block description %} App de lugares para compartir fotos{% endblock %}"/>
    <meta name="keywords" content="Symfony Framework, Cifo La violeta, Curso, App de fotografía, Fotografía de Lugares"/>
    <meta name="author" content="Paco Jaez" />
    <meta name="copyright" content="Paco Jaez" />

    <!-- Favicon and title -->
    <link rel="icon" href="{{ asset('img/favicon/favicon-16x16.png') }}">
    <title>{% block title %}{% endblock %} - SYMFOPLACES</title>
    {% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
			<link
			rel="stylesheet" type="text/css" href="{{ asset('css/halfmoon-variables.css') }}"/>
			<link
			rel="stylesheet" type="text/css" href="{{ asset('css/flip.css') }}"/>
      <link
			rel="stylesheet" type="text/css" href="{{ asset('css/foto.css') }}"/>
			<!--FONT AWESOME-->
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
			<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
			{# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" /> #}
		{% endblock %}
    {% block javascripts %}
		{#{{ encore_entry_script_tags('app') }}#}
	{% endblock %}
  </head>
  <body class="with-custom-webkit-scrollbars with-custom-css-scrollbars" data-dm-shortcut-enabled="true" data-set-preferred-theme-onload="true">
    <!-- Modals go here -->
    <!-- Reference: https://www.gethalfmoon.com/docs/modal -->
    <!-- Page wrapper start -->
    <div class="page-wrapper with-navbar with-sidebar with-navbar-fixed-bottom" data-sidebar-type="overlayed-all">
      <div class="sidebar-overlay" onclick="halfmoon.toggleSidebar()"></div>      
        <!-- Sticky alerts (toasts), empty container -->
        <!-- Reference: https://www.gethalfmoon.com/docs/sticky-alerts-toasts -->
        {# <div class="sticky-alerts"></div> #}
          <!-- Navbar start -->
          {% include('components/navbar.html.twig') %}
          <!-- Navbar end -->
          <!-- Overlayed sidebar -->   
          {% include('components/sidebar.html.twig') %}

            <!-- Content wrapper start -->
          <div class="m-4 content-wrapper overflow-x-hidden">
              {% block success %}
                  {% for message in app.flashes('success') %}
                      <div class="p-4 m-4 alert alert-success" role="alert">
                          <h4 class="alert-heading">Operación realizada correctamente</h4>
                              {{ message }}
                      </div>
                  {% endfor %}
                  {% for message in app.flashes('warning') %}
                      <div class="p-4 m-4 alert alert-danger" role="alert">
                          <h4 class="alert-heading">Oops, algo no está bien</h4>
                              {{ message }}
                      </div>
                  {% endfor %}
              {% endblock %}            
              {% block main %}{% endblock %}
          </div>
          <!-- Content wrapper end -->  
      </div>
      <!-- Sidebar end -->
    </div>
    <!-- Page wrapper end -->
    <!-- Halfmoon JS -->
    <!-- Requires halfmoon.js for toggling sidebar -->
	{% block scripts %}
		<script src="{{ asset('js/halfmoon.js') }}" defer></script>
		<script src="{{ asset('js/hideDarkModeIcon.js')}}" defer></script>
    <script src="{{ asset('js/foto.js') }}" defer></script>
	{% endblock %}
  </body>
</html>